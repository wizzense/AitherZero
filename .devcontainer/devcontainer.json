{
  "name": "AitherZero Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "7.4"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.powershell",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "GitHub.vscode-pull-request-github"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "terminal.integrated.profiles.linux": {
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell",
            "args": [
              "-NoLogo"
            ]
          }
        },
        "powershell.powerShellDefaultVersion": "PowerShell (x64)",
        "powershell.integratedConsole.showOnStartup": false,
        "files.eol": "\n",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "[powershell]": {
          "editor.tabSize": 4,
          "editor.insertSpaces": true,
          "editor.formatOnSave": true
        },
        "[yaml]": {
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "[json]": {
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "github.copilot.enable": {
          "*": true,
          "yaml": true,
          "plaintext": false,
          "markdown": true,
          "powershell": true
        }
      }
    }
  },
  "onCreateCommand": [
    "sudo apt-get update",
    "sudo apt-get install -y curl wget"
  ],
  "postCreateCommand": [
    "bash",
    "-c",
    "pwsh -Command 'try { Install-Module -Name Pester -Force -SkipPublisherCheck -Scope CurrentUser -ErrorAction Stop; Install-Module -Name PSScriptAnalyzer -Force -SkipPublisherCheck -Scope CurrentUser -ErrorAction Stop; Write-Host \"PowerShell modules installed successfully\" } catch { Write-Warning \"Failed to install PowerShell modules: $_\"; exit 0 }'"
  ],
  "remoteEnv": {
    "AITHERZERO_ROOT": "${containerWorkspaceFolder}",
    "AITHERZERO_ENVIRONMENT": "development",
    "AITHERZERO_NONINTERACTIVE": "1"
  },
  "forwardPorts": [
    8080,
    8443
  ],
  "postStartCommand": [
    "bash",
    "-c",
    "git config --global --add safe.directory ${containerWorkspaceFolder} && echo 'Container setup complete'"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "containerEnv": {
    "TZ": "UTC"
  },
  "init": true,
  "privileged": false
}
