{
  "name": "@aitherzero/mcp-server",
  "version": "2.0.0",
  "description": "Model Context Protocol server for AitherZero infrastructure automation platform - v2.0 with enhanced GitHub Copilot integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "aitherzero-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:auto": "node scripts/start-with-build.mjs",
    "dev": "tsc && node dist/index.js",
    "test": "node test/basic-test.mjs",
    "test:manual": "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"tools/list\",\"params\":{}}' | node dist/index.js",
    "postinstall": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "aitherzero",
    "infrastructure",
    "automation",
    "powershell",
    "devops",
    "ai-assistant",
    "claude",
    "copilot",
    "github-copilot",
    "agent-mode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wizzense/AitherZero.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/wizzense/AitherZero/issues"
  },
  "homepage": "https://github.com/wizzense/AitherZero/tree/main/mcp-server#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "author": "Aitherium Corporation",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
