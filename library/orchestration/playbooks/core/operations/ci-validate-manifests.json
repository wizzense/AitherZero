{
  "metadata": {
    "name": "ci-validate-manifests",
    "description": "Validate PowerShell module manifests for syntax and Unicode issues",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "validation", "manifests", "modules"],
    "estimatedDuration": "2-5 minutes",
    "githubWorkflow": "validate-manifests.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": [],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "autoFix": false,
      "runTests": false
    },
    "profiles": {
      "standard": {
        "description": "Standard manifest validation",
        "variables": {
          "autoFix": false,
          "runTests": false
        }
      },
      "fix": {
        "description": "Validate and fix Unicode issues",
        "variables": {
          "autoFix": true,
          "runTests": false
        }
      },
      "with-tests": {
        "description": "Validate and run tests",
        "variables": {
          "autoFix": false,
          "runTests": true
        }
      }
    },
    "stages": [
      {
        "name": "Manifest Validation",
        "description": "Validate PowerShell module manifest syntax",
        "sequences": ["0405"],
        "variables": {},
        "continueOnError": false,
        "timeout": 120
      }
    ]
  }
}
