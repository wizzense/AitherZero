{
  "name": "minimal",
  "description": "Core infrastructure deployment only - get OpenTofu running fast",
  "estimatedSize": "5-8 MB",
  "targetAudience": "Quick infrastructure deployment",
  "coreFiles": [
    "Start-AitherZero.ps1",
    "aither.ps1", 
    "aither.bat",
    "README.md",
    "LICENSE",
    "VERSION"
  ],
  "directories": {
    "aither-core": {
      "include": [
        "aither-core.ps1",
        "AitherCore.psd1",
        "AitherCore.psm1"
      ],
      "subdirectories": {
        "shared": "all",
        "scripts": [
          "0007_Install-Go.ps1",
          "0008_Install-OpenTofu.ps1", 
          "0009_Initialize-OpenTofu.ps1",
          "Invoke-CoreApplication.ps1"
        ]
      }
    },
    "configs": [
      "default-config.json",
      "core-runner-config.json"
    ],
    "opentofu": "all"
  },
  "modules": {
    "required": [
      "Logging",
      "LabRunner", 
      "OpenTofuProvider",
      "ParallelExecution",
      "ConfigurationCore"
    ],
    "moduleComponents": {
      "include": ["*.psd1", "*.psm1", "Public/**", "Private/**", "Resources/**"],
      "exclude": ["tests/**", "Legacy/**", "examples/**"]
    }
  },
  "platformSpecific": {
    "windows": {
      "launchers": ["AitherZero.bat"],
      "extensions": ["zip"],
      "scripts": ["bootstrap.ps1"]
    },
    "linux": {
      "launchers": ["aitherzero.sh"],
      "extensions": ["tar.gz"],
      "scripts": ["bootstrap.sh"],
      "permissions": ["755"]
    },
    "macos": {
      "launchers": ["aitherzero.sh"],
      "extensions": ["tar.gz"],
      "scripts": ["bootstrap.sh"],
      "permissions": ["755"]
    }
  },
  "features": {
    "infrastructure": true,
    "opentofu": true,
    "basicLogging": true,
    "coreAutomation": true,
    "development": false,
    "aiTools": false,
    "advancedSecurity": false,
    "testing": false
  }
}