{
  "name": "development",
  "description": "Complete development environment with all tools for contributing",
  "estimatedSize": "35-50 MB",
  "targetAudience": "Contributors and advanced users",
  "extends": "standard", 
  "additionalModules": [
    "DevEnvironment",
    "AIToolsIntegration",
    "PatchManager", 
    "TestingFramework",
    "SetupWizard",
    "ProgressTracking",
    "SecurityAutomation",
    "ConfigurationCarousel",
    "ConfigurationRepository",
    "OrchestrationEngine",
    "RepoSync",
    "RestAPIServer"
  ],
  "additionalDirectories": {
    "aither-core/scripts": "all",
    "tests": "all",
    "requirements": "all"
  },
  "additionalConfigs": [
    "integration-certification-config.json",
    "iso-management-config.psd1",
    "feature-registry.json"
  ],
  "developmentFiles": [
    "CONTRIBUTING.md",
    "CHANGELOG.md",
    "QUICKSTART.md",
    ".vscode/tasks.json",
    "release.ps1"
  ],
  "features": {
    "infrastructure": true,
    "opentofu": true,
    "advancedLogging": true,
    "systemMonitoring": true,
    "remoteManagement": true,
    "backupManagement": true,
    "isoManagement": true,
    "secureCredentials": true,
    "scriptAutomation": true,
    "licenseManagement": true,
    "development": true,
    "aiTools": true,
    "advancedSecurity": true,
    "testing": true,
    "gitWorkflow": true,
    "cicd": true,
    "configurationManagement": true,
    "orchestration": true,
    "api": true
