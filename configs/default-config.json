{
  "application": {
    "name": "AitherZero",
    "version": "0.5-minimal",
    "description": "Simple Infrastructure Automation"
  },
  "infrastructure": {
    "provider": "opentofu",
    "workingDirectory": "./opentofu",
    "stateDirectory": "./opentofu/state"
  },
  "lab": {
    "hypervisor": "hyperv",
    "defaultVMPath": "C:\\VMs",
    "defaultMemory": "2GB",
    "defaultCPU": 2
  },
  "logging": {
    "level": "Info",
    "path": "./logs"
  }
}