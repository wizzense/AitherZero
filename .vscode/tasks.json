        // ===================================================================
        // CORE AITHERZERO TASKS
        // ===================================================================
        
        {
            "label": "AitherZero: Initialize Environment",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "Import-Module './AitherZero.psd1' -Force; Write-Host 'AitherZero initialized successfully' -ForegroundColor Green"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        
        {
            "label": "AitherZero: Run PSScriptAnalyzer",
            "type": "shell", 
            "command": "pwsh",
            "args": [
                "-File",
                "./az.ps1",
                "0404"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
