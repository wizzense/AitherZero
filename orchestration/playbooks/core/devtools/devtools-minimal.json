{
  "metadata": {
    "name": "devtools-minimal",
    "description": "Essential development tools for quick project setup",
    "version": "2.0.0",
    "category": "setup",
    "author": "AitherZero Infrastructure Team",
    "tags": ["devtools", "setup", "minimal", "essential", "quick-start"],
    "estimatedDuration": "10-15 minutes",
    "lastUpdated": "2025-11-02T06:00:00Z"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": [],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"],
    "permissions": ["admin-optional"]
  },
  "orchestration": {
    "defaultVariables": {
      "installPath": "",
      "skipOptional": true,
      "nonInteractive": false,
      "updateExisting": false
    },
    "profiles": {
      "minimal": {
        "description": "Absolute essentials only (Git, Node, Docker)",
        "variables": {
          "skipOptional": true,
          "skipPython": true
        }
      },
      "standard": {
        "description": "Standard development setup",
        "variables": {
          "skipOptional": false
        }
      },
      "docker-focused": {
        "description": "Container-focused development",
        "variables": {
          "skipOptional": true,
          "prioritizeDocker": true
        }
      }
    },
    "stages": [
      {
        "name": "Environment Preparation",
        "description": "Prepare directories and environment",
        "sequences": ["0002"],
        "variables": {
          "Profile": "Minimal"
        },
        "continueOnError": false,
        "timeout": 60
      },
      {
        "name": "Install Git",
        "description": "Install or update Git version control",
        "sequences": ["0207"],
        "variables": {
          "InstallPath": "{{installPath}}",
          "NonInteractive": "{{nonInteractive}}",
          "UpdateExisting": "{{updateExisting}}"
        },
        "continueOnError": false,
        "timeout": 300
      },
      {
        "name": "Install Node.js",
        "description": "Install Node.js and npm",
        "sequences": ["0201"],
        "variables": {
          "InstallPath": "{{installPath}}",
          "NonInteractive": "{{nonInteractive}}",
          "Version": "LTS"
        },
        "continueOnError": false,
        "timeout": 300
      },
      {
        "name": "Install Docker",
        "description": "Install Docker for containerization",
        "sequences": ["0208"],
        "variables": {
          "InstallPath": "{{installPath}}",
          "NonInteractive": "{{nonInteractive}}"
        },
        "continueOnError": true,
        "timeout": 600
      },
      {
        "name": "Install Python",
        "description": "Install Python development environment",
        "sequences": ["0206"],
        "condition": "!{{skipPython:=false}}",
        "variables": {
          "InstallPath": "{{installPath}}",
          "NonInteractive": "{{nonInteractive}}",
          "Version": "3.11"
        },
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Environment Validation",
        "description": "Verify all tools are properly installed",
        "sequences": ["0500"],
        "variables": {
          "CheckGit": true,
          "CheckNode": true,
          "CheckDocker": true,
          "CheckPython": "!{{skipPython:=false}}"
        },
        "continueOnError": false,
        "timeout": 60
      }
    ]
  },
  "validation": {
    "preConditions": [],
    "postConditions": [
      {
        "name": "Git Installed",
        "condition": "Get-Command git -ErrorAction SilentlyContinue",
        "message": "Git should be installed and available"
      },
      {
        "name": "Node Installed",
        "condition": "Get-Command node -ErrorAction SilentlyContinue",
        "message": "Node.js should be installed and available"
      }
    ]
  },
  "notifications": {
    "onStart": {
      "message": "üõ†Ô∏è  Installing essential development tools...",
      "level": "Information",
      "channels": ["console", "log"]
    },
    "onSuccess": {
      "message": "‚úÖ Essential development tools installed successfully!",
      "level": "Success",
      "channels": ["console", "log"]
    },
    "onFailure": {
      "message": "‚ùå Development tools installation failed",
      "level": "Error",
      "channels": ["console", "log"],
      "includeFailures": true
    }
  },
  "reporting": {
    "enabled": true,
    "formats": ["Console", "JSON"],
    "outputPath": "./reports/setup",
    "includeMetrics": true,
    "includeLogs": true
  },
  "postActions": [
    {
      "description": "Display installed tools",
      "type": "script",
      "inline": "Write-Host '\\nüì¶ Installed Development Tools:' -ForegroundColor Cyan; @('git', 'node', 'npm', 'docker', 'python') | ForEach-Object { $cmd = Get-Command $_ -ErrorAction SilentlyContinue; if ($cmd) { Write-Host \"  ‚úì $_`: $($cmd.Version)\" -ForegroundColor Green } else { Write-Host \"  ‚úó $_`: Not installed\" -ForegroundColor Yellow } }"
    },
    {
      "description": "Next steps",
      "type": "script",
      "inline": "Write-Host '\\nüí° Next Steps:' -ForegroundColor Yellow; Write-Host '  - Restart terminal for PATH changes to take effect'; Write-Host '  - Run devtools-full for additional tools (VS Code, Cloud CLIs)'; Write-Host '  - Configure Git: git config --global user.name \"Your Name\"'"
    }
  ]
}
