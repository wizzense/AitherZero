{
  "metadata": {
    "name": "test-quick",
    "description": "Fast validation for development",
    "version": "1.0.0",
    "category": "testing",
    "tags": ["testing", "quick", "development", "validation"],
    "estimatedDuration": "5-10 minutes",
    "githubWorkflow": "N/A"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["PSScriptAnalyzer"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false
    },
    "profiles": {},
    "stages": [
      {
        "name": "Syntax Validation",
        "description": "Validate PowerShell syntax",
        "sequences": ["0407"],
        "variables": {
          "All": true
        },
        "continueOnError": false,
        "timeout": 180
      },
      {
        "name": "Config Validation",
        "description": "Validate config.psd1",
        "sequences": ["0413"],
        "variables": {},
        "continueOnError": false,
        "timeout": 120
      },
      {
        "name": "Manifest Validation",
        "description": "Validate module manifests",
        "sequences": ["0405"],
        "variables": {},
        "continueOnError": false,
        "timeout": 120
      }
    ]
  }
}
