{
  "metadata": {
    "name": "ci-publish-test-reports",
    "description": "Collect and publish test results",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "testing", "reporting", "artifacts"],
    "estimatedDuration": "3-8 minutes",
    "githubWorkflow": "publish-test-reports.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["Pester"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "force": false
    },
    "profiles": {
      "standard": {
        "description": "Standard test report publishing",
        "variables": {
          "force": false
        }
      },
      "force": {
        "description": "Force publish even if no changes",
        "variables": {
          "force": true
        }
      }
    },
    "stages": [
      {
        "name": "Collect Test Results",
        "description": "Collect and aggregate test results",
        "sequences": ["0450"],
        "variables": {
          "Force": "{{force}}"
        },
        "continueOnError": false,
        "timeout": 480
      }
    ]
  }
}
