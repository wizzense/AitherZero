{
  "metadata": {
    "name": "ci-pr-validation",
    "description": "Validate pull requests for code quality and standards",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "pr", "validation", "quality"],
    "estimatedDuration": "10-15 minutes",
    "githubWorkflow": "pr-validation.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["PSScriptAnalyzer"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "failFast": false
    },
    "profiles": {
      "quick": {
        "description": "Quick validation - skip workflow checks",
        "variables": {
          "skipWorkflowCheck": true
        }
      },
      "standard": {
        "description": "Standard validation - all checks",
        "variables": {
          "skipWorkflowCheck": false
        }
      }
    },
    "stages": [
      {
        "name": "Syntax Validation",
        "description": "Validate PowerShell syntax for all files",
        "sequences": ["0407"],
        "variables": {
          "All": true
        },
        "continueOnError": false,
        "timeout": 180
      },
      {
        "name": "PSScriptAnalyzer",
        "description": "Run PSScriptAnalyzer on all PowerShell files",
        "sequences": ["0410"],
        "variables": {},
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Workflow Health Check",
        "description": "Validate GitHub Actions workflows",
        "sequences": ["0440"],
        "variables": {},
        "continueOnError": true,
        "timeout": 120,
        "condition": "{{skipWorkflowCheck}} == false"
      },
      {
        "name": "Config Validation",
        "description": "Validate config.psd1 manifest",
        "sequences": ["0413"],
        "variables": {},
        "continueOnError": false,
        "timeout": 60
      }
    ]
  }
}
