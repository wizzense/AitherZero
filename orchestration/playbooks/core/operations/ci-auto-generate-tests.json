{
  "metadata": {
    "name": "ci-auto-generate-tests",
    "description": "Automatically generate tests for automation scripts",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "testing", "automation", "generation"],
    "estimatedDuration": "5-15 minutes",
    "githubWorkflow": "auto-generate-tests.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["Pester"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "force": false,
      "mode": "Quick"
    },
    "profiles": {
      "quick": {
        "description": "Quick mode - generate tests for new scripts only",
        "variables": {
          "mode": "Quick",
          "force": false
        }
      },
      "full": {
        "description": "Full mode - regenerate all tests",
        "variables": {
          "mode": "Full",
          "force": true
        }
      },
      "detect": {
        "description": "Detect mode - show what would be generated",
        "variables": {
          "mode": "Quick",
          "force": false
        }
      }
    },
    "stages": [
      {
        "name": "Generate Tests",
        "description": "Auto-generate tests for scripts",
        "sequences": ["0950"],
        "variables": {
          "Mode": "{{mode}}",
          "Force": "{{force}}"
        },
        "continueOnError": false,
        "timeout": 900
      },
      {
        "name": "Validate Test Sync",
        "description": "Validate test synchronization after generation",
        "sequences": ["0426"],
        "variables": {},
        "continueOnError": true,
        "timeout": 180
      }
    ]
  }
}
