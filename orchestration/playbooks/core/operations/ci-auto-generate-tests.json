{
  "metadata": {
    "name": "ci-auto-generate-tests",
    "description": "Auto-generate tests for automation scripts - mirrors GitHub Actions auto-generate-tests.yml",
    "version": "1.0.0",
    "category": "operations",
    "author": "AitherZero CI/CD Team",
    "tags": ["ci", "testing", "automation", "github-actions", "generation"],
    "estimatedDuration": "5-15 minutes",
    "lastUpdated": "2025-11-04T06:00:00Z",
    "githubWorkflow": "auto-generate-tests.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["Pester"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"],
    "permissions": []
  },
  "orchestration": {
    "defaultVariables": {
      "mode": "Quick",
      "force": false,
      "detectOnly": false
    },
    "profiles": {
      "quick": {
        "description": "Quick mode - generate tests for new scripts only",
        "variables": {
          "mode": "Quick",
          "force": false,
          "detectOnly": false
        }
      },
      "full": {
        "description": "Full mode - regenerate all tests",
        "variables": {
          "mode": "Full",
          "force": true,
          "detectOnly": false
        }
      },
      "detect": {
        "description": "Detection mode - identify scripts without tests",
        "variables": {
          "mode": "Quick",
          "force": false,
          "detectOnly": true
        }
      }
    },
    "stages": [
      {
        "name": "Generate Tests",
        "description": "Auto-generate tests for automation scripts",
        "sequences": ["0950"],
        "variables": {
          "Mode": "{{mode}}",
          "Force": "{{force}}"
        },
        "continueOnError": false,
        "timeout": 900
      },
      {
        "name": "Validate Test Sync",
        "description": "Validate that all scripts have tests",
        "sequences": ["0426"],
        "condition": "!{{detectOnly}}",
        "variables": {
          "CI": false
        },
        "continueOnError": true,
        "timeout": 120
      }
    ]
  },
  "notifications": {
    "onStart": {
      "message": "üß™ Starting test generation...",
      "level": "Information"
    },
    "onSuccess": {
      "message": "‚úÖ Tests generated successfully!",
      "level": "Success"
    },
    "onFailure": {
      "message": "‚ùå Test generation failed",
      "level": "Error"
    }
  },
  "integrations": {
    "github": {
      "enabled": true,
      "workflow": "auto-generate-tests.yml"
    }
  }
}
