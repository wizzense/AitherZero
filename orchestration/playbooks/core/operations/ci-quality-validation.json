{
  "metadata": {
    "name": "ci-quality-validation",
    "description": "Quality checks on code and components",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "quality", "validation", "code-quality"],
    "estimatedDuration": "10-15 minutes",
    "githubWorkflow": "quality-validation.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["PSScriptAnalyzer"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "failOnWarnings": false
    },
    "profiles": {
      "fast": {
        "description": "Fast quality check - essential checks only",
        "variables": {
          "skipDocumentation": true
        }
      },
      "standard": {
        "description": "Standard quality check - all checks",
        "variables": {
          "skipDocumentation": false
        }
      }
    },
    "stages": [
      {
        "name": "PSScriptAnalyzer Full Scan",
        "description": "Run PSScriptAnalyzer on entire codebase",
        "sequences": ["0404"],
        "variables": {},
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Component Quality Validation",
        "description": "Validate component quality standards",
        "sequences": ["0420"],
        "variables": {},
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Documentation Structure",
        "description": "Validate documentation structure and completeness",
        "sequences": ["0425"],
        "variables": {},
        "continueOnError": true,
        "timeout": 180,
        "condition": "{{skipDocumentation}} == false"
      }
    ]
  }
}
