{
  "metadata": {
    "name": "ci-quality-validation",
    "description": "Quality validation - mirrors GitHub Actions quality-validation.yml",
    "version": "2.0.0",
    "category": "operations",
    "author": "AitherZero CI/CD Team",
    "tags": ["ci", "quality", "validation", "github-actions", "psscriptanalyzer"],
    "estimatedDuration": "10-15 minutes",
    "lastUpdated": "2025-11-02T06:30:00Z",
    "githubWorkflow": "quality-validation.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["PSScriptAnalyzer"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"],
    "permissions": []
  },
  "orchestration": {
    "defaultVariables": {
      "path": "./domains",
      "recursive": true,
      "failOnWarning": false,
      "validateComponents": true
    },
    "profiles": {
      "fast": {
        "description": "Fast quality check",
        "variables": {
          "recursive": false,
          "validateComponents": false
        }
      },
      "comprehensive": {
        "description": "Comprehensive quality validation",
        "variables": {
          "recursive": true,
          "validateComponents": true,
          "failOnWarning": false
        }
      }
    },
    "stages": [
      {
        "name": "PSScriptAnalyzer",
        "description": "Run PSScriptAnalyzer on all code",
        "sequences": ["0404"],
        "variables": {
          "Path": "{{path}}",
          "Recurse": "{{recursive}}",
          "FailOnWarning": "{{failOnWarning}}",
          "ExcludePaths": ["tests", "legacy-to-migrate", "examples"]
        },
        "continueOnError": false,
        "timeout": 300
      },
      {
        "name": "Component Quality",
        "description": "Validate component quality standards",
        "sequences": ["0420"],
        "condition": "{{validateComponents}}",
        "continueOnError": true,
        "timeout": 180
      },
      {
        "name": "Documentation Structure",
        "description": "Validate documentation completeness",
        "sequences": ["0425"],
        "continueOnError": true,
        "timeout": 120
      }
    ]
  },
  "notifications": {
    "onStart": {
      "message": "üîç Starting quality validation...",
      "level": "Information"
    },
    "onSuccess": {
      "message": "‚úÖ Quality validation passed!",
      "level": "Success"
    },
    "onFailure": {
      "message": "‚ùå Quality validation failed",
      "level": "Error"
    }
  },
  "integrations": {
    "github": {
      "enabled": true,
      "workflow": "quality-validation.yml"
    }
  }
}
