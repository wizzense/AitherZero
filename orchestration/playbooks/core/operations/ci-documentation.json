{
  "metadata": {
    "name": "ci-documentation",
    "description": "Generate and deploy documentation",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "documentation", "generation", "deployment"],
    "estimatedDuration": "10-15 minutes",
    "githubWorkflow": "documentation-automation.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": [],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "mode": "Incremental"
    },
    "profiles": {
      "incremental": {
        "description": "Incremental update - only changed files",
        "variables": {
          "mode": "Incremental"
        }
      },
      "full": {
        "description": "Full documentation generation",
        "variables": {
          "mode": "Full"
        }
      }
    },
    "stages": [
      {
        "name": "Generate Function Documentation",
        "description": "Generate documentation from comment-based help",
        "sequences": ["0733"],
        "variables": {},
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Generate Project Indexes",
        "description": "Generate project index files",
        "sequences": ["0745"],
        "variables": {
          "Mode": "{{mode}}"
        },
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Build Complete Documentation",
        "description": "Build complete documentation set",
        "sequences": ["0746"],
        "variables": {},
        "continueOnError": true,
        "timeout": 600
      },
      {
        "name": "Prepare GitHub Pages",
        "description": "Prepare documentation for GitHub Pages",
        "sequences": ["0515"],
        "variables": {},
        "continueOnError": true,
        "timeout": 180
      }
    ]
  }
}
