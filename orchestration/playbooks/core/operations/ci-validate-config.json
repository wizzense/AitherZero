{
  "metadata": {
    "name": "ci-validate-config",
    "description": "Validate config.psd1 manifest - mirrors GitHub Actions validate-config.yml",
    "version": "1.0.0",
    "category": "operations",
    "author": "AitherZero CI/CD Team",
    "tags": ["ci", "validation", "config", "github-actions"],
    "estimatedDuration": "2-5 minutes",
    "lastUpdated": "2025-11-04T06:00:00Z",
    "githubWorkflow": "validate-config.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["PSScriptAnalyzer"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"],
    "permissions": []
  },
  "orchestration": {
    "defaultVariables": {
      "validateConfig": true,
      "syncConfig": true,
      "fixIssues": false
    },
    "profiles": {
      "standard": {
        "description": "Standard config validation matching GitHub Actions",
        "variables": {
          "validateConfig": true,
          "syncConfig": true,
          "fixIssues": false
        }
      },
      "fix": {
        "description": "Validate and fix config issues",
        "variables": {
          "validateConfig": true,
          "syncConfig": true,
          "fixIssues": true
        }
      }
    },
    "stages": [
      {
        "name": "Validate Config Manifest",
        "description": "Validate config.psd1 structure and content",
        "sequences": ["0413"],
        "condition": "{{validateConfig}}",
        "continueOnError": false,
        "timeout": 120
      },
      {
        "name": "Sync Config with Scripts",
        "description": "Check config.psd1 synchronization with automation scripts",
        "sequences": ["0003"],
        "condition": "{{syncConfig}}",
        "continueOnError": false,
        "timeout": 120
      }
    ]
  },
  "notifications": {
    "onStart": {
      "message": "üîç Starting config manifest validation...",
      "level": "Information"
    },
    "onSuccess": {
      "message": "‚úÖ Config manifest is valid and synchronized!",
      "level": "Information"
    },
    "onFailure": {
      "message": "‚ùå Config manifest validation failed",
      "level": "Error"
    }
  },
  "integrations": {
    "github": {
      "enabled": true,
      "workflow": "validate-config.yml"
    }
  }
}
