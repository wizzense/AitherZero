{
  "metadata": {
    "name": "ci-index-automation",
    "description": "Generate project indexes - mirrors GitHub Actions index-automation.yml",
    "version": "1.0.0",
    "category": "operations",
    "author": "AitherZero CI/CD Team",
    "tags": ["ci", "documentation", "indexes", "github-actions", "automation"],
    "estimatedDuration": "5-10 minutes",
    "lastUpdated": "2025-11-04T06:00:00Z",
    "githubWorkflow": "index-automation.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": [],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"],
    "permissions": []
  },
  "orchestration": {
    "defaultVariables": {
      "mode": "Incremental",
      "generateIndexes": true,
      "verifyOnly": false
    },
    "profiles": {
      "incremental": {
        "description": "Incremental index generation - only update changed files",
        "variables": {
          "mode": "Incremental",
          "generateIndexes": true,
          "verifyOnly": false
        }
      },
      "full": {
        "description": "Full index regeneration - rebuild all indexes",
        "variables": {
          "mode": "Full",
          "generateIndexes": true,
          "verifyOnly": false
        }
      },
      "verify": {
        "description": "Verify indexes without regenerating",
        "variables": {
          "mode": "Verify",
          "generateIndexes": false,
          "verifyOnly": true
        }
      }
    },
    "stages": [
      {
        "name": "Generate Project Indexes",
        "description": "Generate index.md files for all directories",
        "sequences": ["0745"],
        "condition": "{{generateIndexes}}",
        "variables": {
          "Mode": "{{mode}}"
        },
        "continueOnError": false,
        "timeout": 600
      }
    ]
  },
  "notifications": {
    "onStart": {
      "message": "üóÇÔ∏è Starting project index generation...",
      "level": "Information"
    },
    "onSuccess": {
      "message": "‚úÖ Project indexes generated successfully!",
      "level": "Information"
    },
    "onFailure": {
      "message": "‚ùå Index generation failed",
      "level": "Error"
    }
  },
  "integrations": {
    "github": {
      "enabled": true,
      "workflow": "index-automation.yml"
    }
  }
}
