{
  "metadata": {
    "name": "ci-index-automation",
    "description": "Generate project index.md files for all directories",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "documentation", "indexes", "automation"],
    "estimatedDuration": "5-10 minutes",
    "githubWorkflow": "index-automation.yml"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": [],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "mode": "Incremental"
    },
    "profiles": {
      "incremental": {
        "description": "Incremental index generation - only changed files",
        "variables": {
          "mode": "Incremental"
        }
      },
      "full": {
        "description": "Full regeneration - all indexes",
        "variables": {
          "mode": "Full"
        }
      },
      "verify": {
        "description": "Verify indexes are up-to-date",
        "variables": {
          "mode": "Verify"
        }
      }
    },
    "stages": [
      {
        "name": "Generate Indexes",
        "description": "Generate project indexes",
        "sequences": ["0745"],
        "variables": {
          "Mode": "{{mode}}"
        },
        "continueOnError": false,
        "timeout": 600
      }
    ]
  }
}
