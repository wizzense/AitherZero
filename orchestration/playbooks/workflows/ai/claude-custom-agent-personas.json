{
  "metadata": {
    "name": "claude-custom-agent-personas",
    "description": "Create and deploy custom Claude agent personas with specialized capabilities",
    "version": "2.0.0", 
    "category": "ai",
    "author": "AitherZero AI Team",
    "tags": ["claude", "personas", "custom-agents", "ai", "specialization", "training"],
    "estimatedDuration": "15-30 minutes",
    "lastUpdated": "2025-10-26T23:06:00Z"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["AIWorkflowOrchestrator", "ClaudeIntegration"],
    "requiredTools": ["claude"],
    "platforms": ["CrossPlatform"],
    "permissions": ["ReadCode", "WriteCode", "ExecuteAI", "TrainAgents"],
    "apiKeys": ["ANTHROPIC_API_KEY"]
  },
  "orchestration": {
    "defaultVariables": {
      "PersonaType": "developer",
      "Expertise": "general",
      "TrainingData": "./training-data",
      "OutputPath": "./ai-personas",
      "EnableCustomization": true,
      "PersonalityTraits": ["analytical", "helpful", "thorough"],
      "SpecializationLevel": "advanced"
    },
    "profiles": {
      "developer-specialist": {
        "description": "Create specialized developer personas for different technologies",
        "variables": {
          "PersonaType": "developer",
          "Expertise": "full-stack",
          "Specializations": ["react", "nodejs", "python", "powershell", "devops"],
          "PersonalityTraits": ["pragmatic", "efficient", "detail-oriented"],
          "IncludeCodeExamples": true,
          "EnableBestPractices": true
        }
      },
      "architect-consultant": {
        "description": "Create enterprise architect and consultant personas",
        "variables": {
          "PersonaType": "architect",
          "Expertise": "enterprise",
          "Specializations": ["microservices", "cloud-native", "security", "scalability"],
          "PersonalityTraits": ["strategic", "visionary", "practical"],
          "IncludePatterns": true,
          "EnableDecisionFrameworks": true
        }
      },
      "security-expert": {
        "description": "Create cybersecurity and compliance specialist personas",
        "variables": {
          "PersonaType": "security-expert",
          "Expertise": "cybersecurity",
          "Specializations": ["threat-modeling", "compliance", "penetration-testing", "forensics"],
          "PersonalityTraits": ["cautious", "thorough", "systematic"],
          "IncludeThreats": true,
          "EnableComplianceChecks": true
        }
      },
      "research-analyst": {
        "description": "Create research and analysis focused personas",
        "variables": {
          "PersonaType": "researcher",
          "Expertise": "analysis",
          "Specializations": ["data-science", "market-research", "technical-writing", "trends"],
          "PersonalityTraits": ["curious", "methodical", "insightful"],
          "IncludeMethodologies": true,
          "EnableDataVisualization": true
        }
      },
      "creative-innovator": {
        "description": "Create innovative and creative problem-solving personas",
        "variables": {
          "PersonaType": "innovator",
          "Expertise": "creative-solutions",
          "Specializations": ["design-thinking", "innovation", "prototyping", "user-experience"],
          "PersonalityTraits": ["creative", "experimental", "user-focused"],
          "IncludeInnovationMethods": true,
          "EnablePrototyping": true
        }
      }
    },
    "stages": [
      {
        "name": "Claude Environment Setup",
        "description": "Setup Claude Code CLI and AI environment",
        "sequences": ["0217", "0730"],
        "variables": {
          "Provider": "Claude",
          "EnablePersonaTraining": true,
          "ConfigureCustomAgents": true
        },
        "continueOnError": false,
        "timeout": 600
      },
      {
        "name": "Persona Training Data Preparation",
        "description": "Prepare and validate training data for custom personas",
        "sequences": ["0738"],
        "variables": {
          "PersonaType": "{{PersonaType}}",
          "Expertise": "{{Expertise}}",
          "TrainingPath": "{{TrainingData}}",
          "Specializations": "{{Specializations:=@('general')}}",
          "PrepareCustomData": true
        },
        "continueOnError": false,
        "timeout": 900
      },
      {
        "name": "Custom Persona Creation",
        "description": "Create custom Claude agent personas with specialized traits",
        "sequences": ["0738"],
        "variables": {
          "PersonaType": "{{PersonaType}}",
          "PersonalityTraits": "{{PersonalityTraits}}",
          "SpecializationLevel": "{{SpecializationLevel}}",
          "EnableCustomization": "{{EnableCustomization}}",
          "OutputPath": "{{OutputPath}}/personas"
        },
        "continueOnError": false,
        "timeout": 1200
      },
      {
        "name": "Persona Capabilities Enhancement",
        "description": "Enhance persona capabilities with custom commands and tools",
        "sequences": ["0736", "0740"],
        "variables": {
          "Requirements": "Enhanced {{PersonaType}} with {{Expertise}} expertise",
          "WorkflowType": "Custom",
          "EnableCustomCommands": true,
          "PersonaEnhancements": true
        },
        "parallel": true,
        "continueOnError": true,
        "timeout": 600
      },
      {
        "name": "Persona Validation Testing",
        "description": "Test and validate custom persona responses and capabilities",
        "sequences": ["0739"],
        "variables": {
          "Path": "{{OutputPath}}/personas",
          "ValidationType": "Persona",
          "TestScenarios": true,
          "ValidateResponses": true,
          "QualityThreshold": "high"
        },
        "continueOnError": false,
        "timeout": 600
      },
      {
        "name": "Persona Performance Optimization",
        "description": "Optimize persona performance and response quality",
        "sequences": ["0734"],
        "variables": {
          "PersonaType": "{{PersonaType}}",
          "OptimizeResponses": true,
          "TunePersonality": true,
          "ImproveAccuracy": true
        },
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Custom Command Integration",
        "description": "Integrate custom commands and tools for persona specializations",
        "sequences": ["0740"],
        "variables": {
          "PersonaSpecific": true,
          "CustomCommands": "{{Specializations}}",
          "EnableIntegration": true,
          "TestIntegrations": true
        },
        "continueOnError": true,
        "timeout": 450
      },
      {
        "name": "Persona Documentation Generation",
        "description": "Generate comprehensive documentation for custom personas",
        "sequences": ["0733"],
        "variables": {
          "DocType": "Persona-Guide",
          "OutputPath": "{{OutputPath}}/docs",
          "PersonaType": "{{PersonaType}}",
          "IncludeExamples": "{{IncludeCodeExamples:=true}}",
          "IncludeUsage": true
        },
        "continueOnError": true,
        "timeout": 300
      },
      {
        "name": "Persona Deployment",
        "description": "Deploy and configure custom personas for production use",
        "sequences": ["0743"],
        "variables": {
          "PersonaPath": "{{OutputPath}}/personas",
          "EnableProduction": true,
          "ConfigureAccess": true,
          "SetupMonitoring": true
        },
        "continueOnError": true,
        "timeout": 300
      }
    ]
  },
  "validation": {
    "preConditions": [
      {
        "name": "Claude API Key",
        "condition": "$env:ANTHROPIC_API_KEY -and $env:ANTHROPIC_API_KEY.Length -gt 0",
        "message": "ANTHROPIC_API_KEY is required for persona training"
      },
      {
        "name": "Valid Persona Type",
        "condition": "$PersonaType -in @('developer', 'architect', 'security-expert', 'researcher', 'innovator', 'analyst')",
        "message": "PersonaType must be a supported persona category"
      }
    ],
    "postConditions": [
      {
        "name": "Persona Files Created",
        "condition": "Test-Path '{{OutputPath}}/personas' -and (Get-ChildItem '{{OutputPath}}/personas' -Filter '*.json').Count -gt 0",
        "message": "Custom persona configuration files should be created"
      },
      {
        "name": "Documentation Generated",
        "condition": "Test-Path '{{OutputPath}}/docs'",
        "message": "Persona documentation should be generated"
      }
    ],
    "thresholds": {
      "PersonaQuality": {
        "maxCount": 85,
        "action": "continue"
      },
      "ValidationErrors": {
        "maxCount": 2,
        "action": "warn"
      }
    }
  },
  "notifications": {
    "onStart": {
      "message": "üé≠ Creating custom Claude agent persona: {{PersonaType}} with {{Expertise}} expertise...",
      "level": "Information",
      "channels": ["console", "log"]
    },
    "onSuccess": {
      "message": "‚úÖ Custom Claude persona '{{PersonaType}}' created successfully with specialized capabilities!",
      "level": "Success",
      "channels": ["console", "log"]
    },
    "onFailure": {
      "message": "‚ùå Custom persona creation failed. Check training data and API connectivity.",
      "level": "Error",
      "channels": ["console", "log"]
    },
    "onWarning": {
      "message": "‚ö†Ô∏è Persona created with some limitations. Review validation results for optimization opportunities.",
      "level": "Warning",
      "channels": ["console", "log"]
    }
  },
  "reporting": {
    "enabled": true,
    "formats": ["HTML", "JSON", "Markdown"],
    "outputPath": "./reports/personas",
    "includeMetrics": true,
    "includeLogs": true
  }
}