{
  "name": "test-quick",
  "description": "Fast validation for development - runs unit tests and syntax analysis",
  "version": "1.0.0",
  "author": "AitherZero Testing Framework",
  "tags": ["testing", "quick", "development", "validation"],
  "requirements": {
    "modules": ["Pester", "PSScriptAnalyzer"],
    "minimumVersion": "7.0",
    "estimatedDuration": "5-10 minutes"
  },
  "variables": {
    "testPath": "./tests",
    "outputPath": "./tests/results",
    "skipCoverage": true,
    "failFast": true
  },
  "stages": [
    {
      "name": "Environment Check",
      "description": "Verify testing tools are installed",
      "sequence": ["0400"],
      "continueOnError": false
    },
    {
      "name": "Unit Tests",
      "description": "Run unit tests only",
      "sequence": ["0402"],
      "variables": {
        "NoCoverage": true
      },
      "continueOnError": false
    },
    {
      "name": "Static Analysis",
      "description": "Quick PSScriptAnalyzer check",
      "sequence": ["0404"],
      "variables": {
        "ExcludePaths": ["tests", "legacy-to-migrate", "examples"]
      },
      "continueOnError": true
    },
    {
      "name": "AST Validation",
      "description": "Syntax validation only",
      "sequence": ["0405"],
      "variables": {
        "CheckSyntax": true,
        "CheckParameters": false,
        "CheckCommands": false,
        "CheckModuleDependencies": false
      },
      "continueOnError": true
    }
  ],
  "notifications": {
    "onSuccess": {
      "message": "✅ Quick validation passed!",
      "level": "Information"
    },
    "onFailure": {
      "message": "❌ Quick validation failed - check test results",
      "level": "Error"
    }
  },
  "postActions": [
    {
      "description": "Display test summary",
      "type": "script",
      "inline": "Get-ChildItem './tests/results' -Filter '*Summary*.json' | Select-Object -Last 1 | Get-Content | ConvertFrom-Json | Format-List"
    }
  ]
}