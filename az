#!/usr/bin/env pwsh
# Get script directory - $PSScriptRoot may be empty when invoked directly
$root = if ($PSScriptRoot) { $PSScriptRoot } else { Get-Location | Select-Object -ExpandProperty Path }
if (-not $env:AITHERZERO_INITIALIZED) {
    Import-Module (Join-Path $root "AitherZero.psd1") -Force -Global
}
& (Join-Path $root "az.ps1") @args
