# GitHub Configuration
GITHUB_OWNER=wizzense
GITHUB_REPO=AitherZero
GITHUB_TOKEN=your_github_personal_access_token_here

# Runner Configuration
RUNNER_NAME=aitherzero-main-runner
RUNNER_LABELS=self-hosted,linux,x64,aitherzero,main-deployment
RUNNER_WORKDIR=/runner/_work
RUNNER_GROUP=default

# Deployment Configuration
DEPLOYMENT_PORT=8080
DEPLOYMENT_HTTPS_PORT=8443
DEPLOYMENT_AUTO_UPDATE=true
DEPLOYMENT_BRANCH=main

# Resource Limits
RUNNER_CPU_LIMIT=2
RUNNER_MEMORY_LIMIT=4G
DEPLOYMENT_CPU_LIMIT=2
DEPLOYMENT_MEMORY_LIMIT=2G

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=7

# Auto-update Settings
AUTO_UPDATE_ENABLED=true
AUTO_UPDATE_SCHEDULE=daily
AUTO_UPDATE_TIME=02:00
