{
  "metadata": {
    "name": "test-matrix-example",
    "description": "Example playbook demonstrating matrix build capabilities",
    "version": "1.0.0",
    "category": "testing",
    "tags": ["matrix", "testing", "example", "demo"],
    "estimatedDuration": "5-10 minutes",
    "githubWorkflow": "N/A - Example playbook"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["Pester"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "failFast": false
    },
    "profiles": {
      "quick": {
        "description": "Quick matrix test - minimal combinations",
        "variables": {
          "testDepth": "shallow"
        },
        "overrides": {
          "profile": ["quick"]
        }
      },
      "comprehensive": {
        "description": "Full matrix test - all combinations",
        "variables": {
          "testDepth": "deep"
        }
      }
    },
    "stages": [
      {
        "name": "Matrix Testing",
        "description": "Run tests with multiple configuration combinations",
        "sequences": ["0402"],
        "variables": {
          "EnableMatrix": true,
          "MatrixDimensions": {
            "profile": ["quick", "comprehensive"],
            "severity": ["Error", "Warning"]
          }
        },
        "continueOnError": false,
        "timeout": 600
      }
    ]
  },
  "reporting": {
    "enabled": true,
    "formats": ["Markdown", "JSON"],
    "outputPath": "./reports/matrix-tests",
    "includeMetrics": true,
    "summary": true
  }
}
