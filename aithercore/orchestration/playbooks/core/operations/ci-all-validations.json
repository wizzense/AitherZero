{
  "metadata": {
    "name": "ci-all-validations",
    "description": "Run all CI validation checks in one playbook",
    "version": "1.0.0",
    "category": "operations",
    "tags": ["ci", "validation", "comprehensive", "meta"],
    "estimatedDuration": "15-25 minutes",
    "githubWorkflow": "N/A - Meta playbook combining multiple workflows"
  },
  "requirements": {
    "minimumPowerShellVersion": "7.0",
    "requiredModules": ["PSScriptAnalyzer", "Pester"],
    "requiredTools": [],
    "platforms": ["Windows", "Linux", "macOS"]
  },
  "orchestration": {
    "defaultVariables": {
      "verbose": false,
      "failFast": false
    },
    "profiles": {
      "quick": {
        "description": "Essential checks only (2-5 min)",
        "variables": {
          "skipWorkflowCheck": true,
          "skipQuality": true,
          "skipTests": true
        }
      },
      "standard": {
        "description": "Most CI checks (10-15 min)",
        "variables": {
          "skipWorkflowCheck": false,
          "skipQuality": true,
          "skipTests": true
        }
      },
      "comprehensive": {
        "description": "All checks including tests (15-25 min)",
        "variables": {
          "skipWorkflowCheck": false,
          "skipQuality": false,
          "skipTests": false
        }
      }
    },
    "stages": [
      {
        "name": "Syntax Validation",
        "description": "Validate PowerShell syntax for all files",
        "sequences": ["0407"],
        "variables": {
          "All": true
        },
        "continueOnError": false,
        "timeout": 180
      },
      {
        "name": "Config Validation",
        "description": "Validate config.psd1 manifest",
        "sequences": ["0413"],
        "variables": {},
        "continueOnError": false,
        "timeout": 120
      },
      {
        "name": "Config Synchronization",
        "description": "Sync config with automation scripts",
        "sequences": ["0003"],
        "variables": {},
        "continueOnError": true,
        "timeout": 120
      },
      {
        "name": "Manifest Validation",
        "description": "Validate PowerShell module manifests",
        "sequences": ["0405"],
        "variables": {},
        "continueOnError": false,
        "timeout": 120
      },
      {
        "name": "Test Sync Validation",
        "description": "Validate test-script synchronization",
        "sequences": ["0426"],
        "variables": {},
        "continueOnError": true,
        "timeout": 180
      },
      {
        "name": "Workflow Health Check",
        "description": "Validate GitHub Actions workflows",
        "sequences": ["0440"],
        "variables": {},
        "continueOnError": true,
        "timeout": 120,
        "condition": "{{skipWorkflowCheck}} == false"
      },
      {
        "name": "Quality Validation",
        "description": "Run PSScriptAnalyzer on all code",
        "sequences": ["0404"],
        "variables": {},
        "continueOnError": true,
        "timeout": 300,
        "condition": "{{skipQuality}} == false"
      },
      {
        "name": "Install Testing Tools",
        "description": "Ensure testing tools are installed",
        "sequences": ["0400"],
        "variables": {},
        "continueOnError": false,
        "timeout": 300,
        "condition": "{{skipTests}} == false"
      },
      {
        "name": "Unit Tests",
        "description": "Run unit tests",
        "sequences": ["0402"],
        "variables": {},
        "continueOnError": true,
        "timeout": 900,
        "condition": "{{skipTests}} == false"
      }
    ]
  }
}
